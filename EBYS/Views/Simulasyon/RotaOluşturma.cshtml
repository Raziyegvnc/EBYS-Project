@{
    ViewData["Title"] = "Yeni Rota Oluştur";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .sim-box {
        max-width: 900px;
        margin: 40px auto;
        background: #fff;
        border: 1px solid #ddd;
        border-radius: 6px;
        padding: 30px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
    }

    .form-group label {
        font-weight: 500;
    }

    .form-title {
        font-size: 20px;
        font-weight: bold;
        color: #0D47A1;
        margin-bottom: 20px;
    }

    .form-control:focus {
        box-shadow: none;
        border-color: #1976D2;
    }

    .btn-ebys {
        background-color: #1976D2;
        color: white;
        border: none;
        font-weight: 500;
    }

        .btn-ebys:hover {
            background-color: #0D47A1;
        }

    .form-table th,
    .form-table td {
        padding: 8px 12px;
        border-bottom: 1px solid #eee;
    }

    .form-table th {
        font-weight: 600;
        background: #f7f7f7;
    }

    .form-table td:last-child {
        text-align: center;
    }
</style>

<div class="sim-box">
    <div class="form-title">Yeni Rota</div>

    <form>
        <div class="form-row">
            <div class="form-group col-md-4">
                <label>Rota Adı *</label>
                <input type="text" class="form-control" maxlength="250" />
            </div>

            <div class="form-group col-md-4">
                <label>Rota Türü *</label>
                <select class="form-control">
                    <option>Giden</option>
                    <option>Olur</option>
                    <option>Kapatma</option>
                </select>
            </div>

            <div class="form-group col-md-4 d-flex align-items-center">
                <div class="form-check mt-4">
                    <input class="form-check-input" type="checkbox" id="varsayilanmi" />
                    <label class="form-check-label" for="varsayilanmi">Varsayılan Mı?</label>
                </div>
            </div>
        </div>



        <hr />
        <h5 class="mb-3 text-primary">Rota Kullanıcı Ekleme</h5>

        <div class="form-row">
            <div class="form-group col-md-4">
                <label>İmza Türü</label>
                <select class="form-control">
                    <option>Paraf</option>
                    <option>İmza</option>
                    <option>Koordinasyon</option>
                </select>
            </div>
            <div class="form-group col-md-4">
                <label>Unvan</label>
                <input type="text" class="form-control" />
                </select>
            </div>
            <div class="form-group col-md-4">
                <label>Kariyer Unvanı (Dr., Av. vb)</label>
                <input type="text" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <label>Adına Bilgisi</label>
            <input type="text" class="form-control" />
        </div>

        <button type="button" class="btn btn-sm btn-ebys mb-4">+ Kullanıcı Ekle</button>

        <table class="table form-table">
            <thead>
                <tr>
                    <th>Kullanıcı</th>
                    <th>Unvan</th>
                    <th>Kariyer Unvanı</th>
                    <th>Adına Bilgi</th>
                    <th>İşlem</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Henüz kullanıcı eklenmedi</td>
                    <td>-</td>
                    <td>-</td>
                    <td>-</td>
                    <td>-</td>
                </tr>
            </tbody>
        </table>

        <div class="text-danger mt-2">* Alanların doldurulması zorunludur!</div>

        <div class="d-flex justify-content-end mt-3">
            <button type="submit" class="btn btn-ebys mr-2">Rota Oluştur</button>
            <button type="button" class="btn btn-secondary">Kapat</button>
        </div>
    </form>
</div>
