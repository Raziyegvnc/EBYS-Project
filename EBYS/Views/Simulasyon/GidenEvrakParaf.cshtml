@{
    ViewData["Title"] = "Giden Evrak Paraf Simülasyonu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .sim-container {
        display: flex;
        gap: 20px;
        margin-top: 30px;
    }

    .form-panel {
        flex: 1;
        background: #f9f9f9;
        border: 1px solid #ddd;
        padding: 20px;
        border-radius: 6px;
    }

    .preview-panel {
        flex: 1;
        border: 1px solid #ccc;
        padding: 15px;
        background: white;
        min-height: 600px;
        font-family: 'Times New Roman';
        font-size: 15px;
        color: black;
    }

    .btn-group button {
        margin: 5px 3px;
    }

    .btn-selected {
        background-color: #4FC3F7;
        color: white;
    }

    .content-box {
        background-color: white;
        border-radius: 6px;
        border: 1px solid #dcdcdc;
        box-shadow: 0 0 8px rgba(0,0,0,0.03);
        margin-bottom: 15px;
        transition: all 0.3s ease;
    }

    .box-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 10px 15px;
        background-color: #f7f7f7;
        border-bottom: 1px solid #ddd;
        cursor: pointer;
    }

        .box-header:hover {
            background-color: #f0e6f5;
        }

    .box-title {
        display: flex;
        align-items: center;
        font-size: 16px;
        font-weight: bold;
        color: #0D47A1;
    }

    .collapse-btn {
        font-size: 18px;
        color: #0D47A1;
    }

    .box-content {
        padding: 15px 20px;
        display: none;
    }
</style>

<div class="container">
    <h3 class="mb-4">Kayıt İşlemleri -&gt; Giden Evrak</h3>
    <div class="sim-container">
        <!-- SOL PANEL -->
        <div class="form-panel">
            <h5><strong>Üst Bilgiler</strong></h5>
            <div class="btn-group">
                <button class="btn btn-sm btn-outline-secondary info-btn">Bilgi Edinme Hakkı</button>
                <button class="btn btn-sm btn-outline-secondary info-btn">Özel Hayatın Korunması</button>
                <button class="btn btn-sm btn-outline-secondary info-btn">Kişiye Özel</button>
            </div>
            <div class="btn-group">
                <button class="btn btn-sm btn-outline-secondary gizlilik-btn">Hizmete Özel</button>
                <button class="btn btn-sm btn-outline-secondary gizlilik-btn">Gizli</button>
                <button class="btn btn-sm btn-outline-secondary gizlilik-btn">Çok Gizli</button>
            </div>
            <div class="btn-group">
                <button class="btn btn-sm btn-outline-secondary oncelik-btn">Günlüdür</button>
                <button class="btn btn-sm btn-outline-secondary oncelik-btn">Acele</button>
            </div>

            <div class="form-group mt-3">
                <label>Standart Dosya Planı</label>
                <input type="text" class="form-control" />
            </div>

            <div class="form-group">
                <label>Konu</label>
                <input type="text" class="form-control" />
            </div>

            <hr />
            <h5><strong>Paraf Sırası</strong></h5>
            <div class="d-flex flex-wrap gap-2">
                <div class="border rounded p-2">Raziye GÜVENÇ <br /><small>Büro Personeli</small></div>
                <span class="mt-2">→</span>
                <div class="border rounded p-2">Gülin KARAN ÖZKAYA <br /><small>Şube Müdürü</small></div>
                <span class="mt-2">→</span>
                <div class="border rounded p-2">Özcan ÇETİN <br /><small>Daire Başkanı</small></div>
            </div>

            <!-- DAĞITIMLAR -->
            <div class="content-box">
                <div class="box-header">
                    <div class="box-title">Dağıtımlar</div>
                    <div class="collapse-btn">▼</div>
                </div>
                <div class="box-content">
                    <div class="form-group">
                        <label>Dağıtım Yeri Seçiniz</label>
                        <select class="form-control">
                            <option>Seçiniz...</option>
                            <option>Manisa Büyükşehir Belediyesi </option>
                            <option>Yazı İşleri ve Kararlar Dairesi Başkanlığı</option>
                            <option>EBYS ve Arşiv Şube Müdürlüğü </option>
                            <option>Ulaşım Dairesi Başkanlığı </option>
                            <option>Bilgi İşlem  Şube Müdürlüğü </option>
                            <option>Destek Hizmetleri Dairesi Başkanlığı </option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Dağıtım Planı</label>
                        <input type="text" class="form-control" />
                    </div>
                </div>
            </div>

            <!-- EKLER -->
            <div class="content-box">
                <div class="box-header">
                    <div class="box-title">Ek, İlgi ve Üstyanı Ekle</div>
                    <div class="collapse-btn">▼</div>
                </div>
                <div class="box-content">
                    <button type="button" class="btn btn-outline-secondary btn-sm">Dosya Ekle</button>
                </div>
            </div>

            <!-- EK ÜST VERİLER -->
            <div class="content-box">
                <div class="box-header">
                    <div class="box-title">Ek Üst Veriler</div>
                    <div class="collapse-btn">▼</div>
                </div>
                <div class="box-content"></div>
            </div>
        </div>

        <!-- SAĞ PANEL -->
        <div class="preview-panel">
            <div class="text-center mb-3">
                <img src="~/images/amblem.png" alt="logo" width="80" style="float: left;" />
                <h5 class="mt-2">T.C.<br /> MANİSA BÜYÜKŞEHİR BELEDİYE BAŞKANLIĞI<br /> <br />Yazı İşleri ve Kararlar Dairesi Başkanlığı <br />EBYS ve Arşiv Şube Müdürlüğü</h5>
            </div>
            <p><strong>Sayı:</strong> 40098702-sdp-Otomatik &nbsp;&nbsp;&nbsp; <strong>Tarih:</strong> Otomatik Tarih</p>
            <p><strong>Konu:</strong> ........................................</p>
            <hr />
            <p><strong><u>Metni buraya yazarız...</u></strong></p>
            <div contenteditable="true" style="min-height: 150px; border: 1px solid #ccc; padding: 10px; font-size: 14px;"></div>
            <br /><br />
            <p style="text-align:right;">.............<br /><em>Daire Başkanı</em></p>

            <br />
            <p><strong>[]</strong></p>
            <table>
                <tr>
                    <td>..........</td>
                    <td><strong>Büro Personeli:</strong>.............</td>
                </tr>
                <tr>
                    <td>..........</td>
                    <td><strong>Şube Müdürü:</strong>.............</td>
                </tr>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
            $(document).ready(function () {
            $('.info-btn').click(function () {
                $('.info-btn').removeClass('btn-selected');
                $(this).addClass('btn-selected');
            });

            $('.gizlilik-btn').click(function () {
                $('.gizlilik-btn').removeClass('btn-selected');
                $(this).addClass('btn-selected');
            });

            $('.oncelik-btn').click(function () {
                $('.oncelik-btn').removeClass('btn-selected');
                $(this).addClass('btn-selected');
            });

            $('.collapse-btn').click(function () {
                const content = $(this).closest('.content-box').find('.box-content');
                content.slideToggle();
                $(this).text($(this).text() === '▼' ? '▲' : '▼');
            });
        });
    </script>
}