@{
    ViewData["Title"] = "Giden Evrak - Tebligat Oluştur";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .sim-container {
        display: flex;
        gap: 20px;
        margin-top: 30px;
    }
    .form-panel {
        flex: 1;
        background: #f9f9f9;
        border: 1px solid #ddd;
        padding: 20px;
        border-radius: 6px;
    }
    .preview-panel {
        flex: 1;
        border: 1px solid #ccc;
        padding: 15px;
        background: white;
        min-height: 600px;
        font-family: 'Times New Roman';
        font-size: 15px;
        color: black;
    }
    .box-title {
        font-weight: bold;
        color: #0D47A1;
        font-size: 16px;
        margin-bottom: 10px;
    }
    .content-box {
        background-color: white;
        border-radius: 6px;
        border: 1px solid #dcdcdc;
        box-shadow: 0 0 8px rgba(0,0,0,0.03);
        margin-bottom: 15px;
    }
    .box-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 10px 15px;
        background-color: #f7f7f7;
        border-bottom: 1px solid #ddd;
        cursor: pointer;
    }
        .box-header:hover {
            background-color: #f0e6f5;
        }
    .collapse-btn {
        font-size: 18px;
        color: #0D47A1;
    }
    .box-content {
        padding: 15px 20px;
        display: none;
    }
    .btn-group button {
        margin: 5px 3px;
    }
    .btn-selected {
        background-color: #4FC3F7;
        color: white;
    }
    .paraf-box {
        display: flex;
        align-items: center;
        gap: 10px;
        flex-wrap: wrap;
        margin-top: 10px;
        margin-bottom: 20px;
    }
    .paraf-user {
        border: 1px solid #ccc;
        padding: 8px;
        border-radius: 4px;
        background: #fdfdfd;
    }
</style>
<div class="container">
    <h3 class="mb-4">Kayıt İşlemleri -> Tebligat Oluştur</h3>
    <div class="sim-container">
        <!-- SOL PANEL -->
        <div class="form-panel">
            <div class="box-title">Üst Bilgiler</div>
            <div class="btn-group">
                <button class="btn btn-sm btn-outline-secondary info-btn">Bilgi Edinme Hakkı</button>
                <button class="btn btn-sm btn-outline-secondary info-btn">Özel Hayatın Korunması</button>
                <button class="btn btn-sm btn-outline-secondary info-btn">Kişiye Özel</button>
            </div>
            <div class="btn-group">
                <button class="btn btn-sm btn-outline-secondary gizlilik-btn">Hizmete Özel</button>
                <button class="btn btn-sm btn-outline-secondary gizlilik-btn">Gizli</button>
                <button class="btn btn-sm btn-outline-secondary gizlilik-btn">Çok Gizli</button>
            </div>
            <div class="btn-group">
                <button class="btn btn-sm btn-outline-secondary oncelik-btn">Günlüdür</button>
                <button class="btn btn-sm btn-outline-secondary oncelik-btn">Acele</button>
            </div>
            <div class="form-group mt-3">
                <label>Standart Dosya Planı</label>
                <input type="text" class="form-control" />
            </div>
            <div class="form-group">
                <label>Konu</label>
                <input type="text" class="form-control" />
            </div>
            <div class="form-group">       
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Onay Makamı" />
                    <div class="input-group-append">
                        <button class="btn btn-outline-secondary" type="button">OLUR</button>
                        <span class="input-group-text bg-white">
                            <i class="fa fa-sync text-muted"></i>
                        </span>
                    </div>
                </div>
            </div>
            <!-- Paraf Sırası -->
            <div class="box-title mt-3">Paraf Sırası</div>
            <div class="paraf-box">
                <div class="paraf-user">Raziye GÜVENÇ <br /><small>Büro Personeli (Paraf)</small></div>
                <span>→</span>
                <div class="paraf-user">Gülin KARAN ÖZKAYA <br /><small>Şube Müdürü</small></div>
                <span>→</span>
                <div class="paraf-user">Özcan ÇETİN <br /><small>Daire Başkanı (İmza)</small></div>
            </div>
            <!-- Dağıtımlar -->
            <div class="content-box">
                <div class="box-header">
                    <div class="box-title">Dağıtımlar</div>
                    <div class="collapse-btn">▼</div>
                </div>
                <div class="box-content" style="display: none;">
                    <div class="form-group">
                        <label>Dağıtım Yeri Seçiniz</label>
                        <select class="form-control">
                            <option>Seçiniz...</option>
                            <option>Manisa Büyükşehir Belediyesi</option>
                            <option>Yazı İşleri ve Kararlar Dairesi Başkanlığı</option>
                            <option>EBYS ve Arşiv Şube Müdürlüğü</option>
                            <option>Ulaşım Dairesi Başkanlığı</option>
                            <option>Bilgi İşlem Şube Müdürlüğü</option>
                            <option>Destek Hizmetleri Dairesi Başkanlığı</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Dağıtım Planı</label>
                        <input type="text" class="form-control" />
                    </div>
                </div>
            </div>
            <!-- Ekler -->
            <div class="content-box">
                <div class="box-header">
                    <div class="box-title">Ekler ve İlgiler</div>
                    <div class="collapse-btn">▼</div>
                </div>
                <div class="box-content">
                    <input type="file" class="form-control" />
                </div>
            </div>
            <!-- Ek Üst Veriler -->
            <div class="content-box">
                <div class="box-header">
                    <div class="box-title">Ek Üst Veriler</div>
                    <div class="collapse-btn">▼</div>
                </div>
                <div class="box-content">
                    <textarea class="form-control" rows="2"></textarea>
                </div>
            </div>
            <div class="text-danger mt-2">* Kırmızı alanların doldurulması zorunludur!</div>
            <button class="btn btn-primary mt-3">Kaydet</button>
        </div>
        <!-- SAĞ PANEL -->
        <div class="preview-panel">
            <div class="text-center mb-3">
                <img src="~/images/amblem.png" alt="logo" width="80" style="float: left;" />
                <h5 class="mt-2">T.C.<br />MANİSA BÜYÜKŞEHİR BELEDİYE BAŞKANLIĞI<br />Yazı İşleri ve Kararlar Dairesi Başkanlığı<br />EBYS ve Arşiv Şube Müdürlüğü</h5>
            </div>
            <p><strong>Sayı:</strong> 40098702-sdp-Otomatik &nbsp;&nbsp;&nbsp; <strong>Tarih:</strong> Otomatik Tarih</p>
            <p><strong>Konu:</strong> ........................................</p>
            <hr />
            <p><strong><u>Metni buraya yazınız...</u></strong></p>
            <div contenteditable="true" style="min-height: 150px; border: 1px solid #ccc; padding: 10px; font-size: 14px;"></div>
            <br /><br />
            <p style="text-align:right;">Özcan ÇETİN <br /><em>Daire Başkanı</em></p>
            <br />
            <p><strong>[]</strong></p>
            <table>
                <tr><td>..........</td><td><strong>Büro Personeli:</strong> Raziye GÜVENÇ</td></tr>
                <tr><td>..........</td><td><strong>Şube Müdürü:</strong> Gülin KARAN ÖZKAYA</td></tr>
            </table>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        $(document).ready(function () {
            $('.info-btn').click(function () {
                $('.info-btn').removeClass('btn-selected');
                $(this).addClass('btn-selected');
            });

            $('.gizlilik-btn').click(function () {
                $('.gizlilik-btn').removeClass('btn-selected');
                $(this).addClass('btn-selected');
            });

            $('.oncelik-btn').click(function () {
                $('.oncelik-btn').removeClass('btn-selected');
                $(this).addClass('btn-selected');
            });

            $('.collapse-btn').click(function () {
                const content = $(this).closest('.content-box').find('.box-content');
                content.slideToggle();
                $(this).text($(this).text() === '▼' ? '▲' : '▼');
            });
        });
    </script>
}