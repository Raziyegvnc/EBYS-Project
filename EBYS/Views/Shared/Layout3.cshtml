<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EBYS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EBYS.styles.css" asp-append-version="true" />
</head>
<body style="
    background-image: url('/images/quiz.png');
    background-size: cover;
    background-repeat: no-repeat;
    background-position: center;
    background-attachment: fixed;
    margin: 0;
    padding: 0;
    height: 100vh;">

    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-gradient" style="background: linear-gradient(to right, #0D47A1, #2196F3);">
            <div class="container">
                <a class="navbar-brand" href="/">EBYS Eğitimi</a>
            </div>
        </nav>
    </header>

    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    <footer class="border-top text-muted text-center py-3">
        &copy; @DateTime.Now.Year - EBYS Quiz Sistemi
    </footer>

    @RenderSection("Scripts", required: false)
</body>
</html>
